<% layout('layouts/boilerplate.ejs') %>

<main>
    <div class="form">
        <h1>Set your new password</h1>
        <form action="/forgotpassword/<%= userId %>/<%= token %>?_method=PATCH" id="forgotPassword" method="POST">
            <div class="form-field">
                <label for="password">Password</label>
                <input type="password" id="newPassword" name="newPassword" required>
                <div class="toggle-password">
                    <a href="#" id="togglePassword">View/Hide Password</a>
                </div>
                <button class="btn-blue">Change Password</button>
            </div>
            <div>
                <div id="length" class='password-requirements'>
                    Your password must be between 8 and 32 characters.
                </div>
                <div id="numbers" class='password-requirements'>
                    Your password must contain at least one number.
                </div>
                <div id="symbols" class='password-requirements'>
                    Your password must contain at least one symbol (!, @, #, %, &).
                </div>
                <div id="uppercase" class='password-requirements'>
                    Your password must contain at least one upper case letter.
                </div>
                <div id="lowercase" class='password-requirements'>
                    Your password must contain at least one lower case letter.
                </div>
            </div>
        </form>
    </div>
</main>

<script type="module" src="/js/forgotPassword.js"></script>