<% layout('layouts/boilerplate.ejs') %>

<main>
    <div class="form">
        <h1>Review Source for Approval</h1>
        <% if (reviewSourceData.state === 'new') { %>
        <form action='/sources/review/<%= reviewSourceData._id %>' method="POST">
        <% } else { %>
        <form action='/sources/review/<%= reviewSourceData._id %>?_method=PUT' method="POST">
        <% } %> 
        <div class="form-field">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" value="<%= reviewSourceData.title %>" required autofocus>
        </div>
        <div class="form-field">
            <label for="media-type">Media Type</label>
            <select name="mediaType" id="mediaType">
                <% for(let mediaType of mediaTypes) { %>
                    <option value="<%= mediaType %>" <%= reviewSourceData.mediaType === mediaType ? 'selected': ''%>><%= mediaType %></option>
                <% } %> 
            </select>
        </div>
            <button class="btn-submit">Approve</button>
        </div>
        </form>
    </div>
</main>
